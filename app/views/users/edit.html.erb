<div class="container">
  <h2 class="edit-user-header" align="center">Updating
    <%=@user.first_name%></h2>
  <%= form_for(@user) do |f| %>
  <div class="container row">
      <div class="row">
        <div class="col-md-7 col-sm-7">

          <%= f.label :first_name %>
          <%= f.text_field :first_name, class:"form-control"%><br>
        </div>
        <div class="col-md-7 col-sm-7">

          <%= f.label :last_name %>
          <%= f.text_field :last_name, class:"form-control"%><br>
        </div>
        <div class="col-md-7 col-sm-7">

          <%= f.label :email %>
          <%= f.text_field :email, class:"form-control"%><br>
        </div>
        <div class="col-md-7 col-sm-7">

          <%= f.label :phone_number %>
          <%= f.text_field :number, class:"form-control"%><br>
        </div>
        <div class="col-md-7 col-sm-7">

          <%= f.label :website %>
          <%= f.text_field :website, class:"form-control"%><br>
        </div>
        <div class="form-group col-md-7">
          <%= f.label :notes %>
          <textarea name="user[notes]" class="form-control" placeholder="Notes"><%=@user.notes%></textarea>
        </div>
        <h3>Socials</h3>
        <div class="col-md-7 col-sm-7">

          <%= f.label :facebook %>
          <%= f.text_field :facebook, class:"form-control"%><br>
        </div>
        <div class="col-md-7 col-sm-7">

          <%= f.label :instagram %>
          <%= f.text_field :instagram, class:"form-control"%><br>
        </div>
        <div class="col-md-7 col-sm-7">

          <%= f.label :twitter %>
          <%= f.text_field :twitter, class:"form-control"%><br>
        </div>
  </div>
    <div class="col-md-7 col-sm-7">
      <input type="submit" value="Submit" class="btn btn-primary"/>
    </div>
  </div>
<% end %>
</div>
