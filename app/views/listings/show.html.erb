<div class="cdf"></div>
<section id="next-section" class="probootstrap-section">
  <div class="container">
    <div class="col-md-8 col-md-8 col-xs-12">
      <h2 class="mb20"><%= @listing.asset_name %></h2>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-12">
      <h4>Price:
        <%= @listing.pricing %>
        Ksh.</h4>
    </div>
    <div class="col-md-8">
      <hr>
      <% j = 0 %>
        <% @listing.images.each do |upload| %>
          <div class="mySlides">
            <div class="numbertext"><%= j = j+1 %></div>
            <%= image_tag upload.variant(resize: "804x804"), class:"image-popup img-responsive" %>
          </div>
        <% end %>
        <a class="prev-f" onclick="plusSlides(-1)">
          <h1 style="color: white;">❮</h1>
        </a>
        <a class="next-f" onclick="plusSlides(1)">
          <h1 style="color: white;">❯</h1>
        </a>
        <br>
      </div>
      <div class="col-md-4">
        <h2>Description</h2>
        <p><%= @listing.description %>
        </p>
        <h4>No of Bedrooms</h4>
        <p><%= @listing.rooms %></p>
        <h4>No of bathrooms</h4>
        <p><%= @listing.bathrooms %></p>
        <h4>ammenities</h4>
        <% @listing.ammenities.each do |ammenity| %>
        <div class="col-md-6 col-xs-6">
          <span id="dot">. </span><%= ammenity.name %>
        </div>
        <% end %><br>
        <h4>Location</h4>
        <p>
          <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=17&size=400x300&markers=size:small%7Ccolor:red%7C#{@listing.latitude},#{@listing.longitude}&key=#{Rails.application.credentials.google_maps_api_key}", alt: "Map", class:"img-responsive" %>
        </p>

        <p>
          <span href="" role="button" class="btn btn-primary contact-seller"><span id="contact-seller">Contact Seller</span> <br> <span id="phone-number">0<%= @listing.phone_number %></span></span>
        </p>
      </div>
    </div>
  </section>

  <!-- START: section -->
  <section class="probootstrap-section probootstrap-section-colored">
    <div class="container">
      <div class="row text-center">
        <div class="col-lg-8 col-md-offset-2 mb30 section-heading probootstrap-animate">
          <h2>Let's Work Together</h2>
          </div>
      </div>
      <div class="row">
        <div class="col-md-4 col-md-offset-4 probootstrap-animate">
          <p class="text-center">
            <a href="mailto:tusake.co.ke@gmail.com?subject=feedback" class="btn btn-ghost btn-ghost-white btn-lg btn-block">Contact Us</a>
          </p>
        </div>
      </div>
    </div>
  </section>
  <!-- END: section -->
